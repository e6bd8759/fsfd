{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "preserveConstEnums": true,
    "outDir": "dist",
    "sourceMap": true
  },
  "exclude": ["node_modules"]
}
